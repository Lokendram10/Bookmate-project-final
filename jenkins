pipeline{
   agent any
       stages{
          stage('Configure'){
             steps{
             echo"Cloning code from github repo"
             git branch: 'main' , url: 'https://github.com/Lokendram10/Bookmate-project-final'
             }
          }
               stage('Build'){
             steps{
                echo"Building image "
                sh 'docker build -t bookmate .'
             }
          }

stage('SonarQube Analysis') {
    steps {
        echo " Running SonarQube Code Analysis"
        withSonarQubeEnv('MySonarQubeServer') {
            sh '''
            sonar-scanner \
              -Dsonar.projectKey=bookmate \
              -Dsonar.sources=. \
              -Dsonar.host.url=http://http://13.233.24.21/:9000 \
              -Dsonar.login=$SONAR_AUTH_TOKEN
            '''
        }
    }
}

             stage('Deploy'){
             steps{
                echo"Deploying bookmate"
                sh 'docker compose up -d --build'
             }
          }


   }
}
