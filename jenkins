pipeline{
   agent any
       stages{
          stage('Configure'){
             steps{
             echo"Cloning code from github repo"
             git branch: 'main' , url: 'https://github.com/Lokendram10/Bookmate-project-final'
             }
          }
               stage('Build'){
             steps{
                echo"Building image "
                sh 'docker build -t bookmate .'
             }
          }

             stage('SonarQube Analysis') {
            steps {
                echo "ðŸ”Ž Running SonarQube Code Analysis (via Docker)"
                withSonarQubeEnv('admin') {
                    sh '''
                    docker run --rm \
                      -e SONAR_HOST_URL=http://13.233.24.21:9000 \
                      -e SONAR_LOGIN=$SONAR_AUTH_TOKEN \
                      -v $(pwd):/usr/src \
                      sonarsource/sonar-scanner-cli
                    '''
                }
            }
        }


             stage('Deploy'){
             steps{
                echo"Deploying bookmate"
                sh 'docker compose up -d --build'
             }
          }


   }
}
